{
  "name": "redux-universal-boilerplate",
  "description": "Boilerplate of an isomorphic (universal) react application",
  "author": "Sergey Ivanov <xufocoder@gmail.com>",
  "license": "MIT",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ufocoder/redux-universal-boilerplate"
  },
  "homepage": "https://github.com/ufocoder/redux-universal-boilerplate",
  "keywords": [
    "react",
    "react-router",
    "react-redux",
    "redux",
    "universal",
    "isomorphic",
    "webpack",
    "express",
    "starter-kit",
    "boilerplate",
    "babel"
  ],
  "main": "bin/server.js",
  "scripts": {
    "start": "forever ./bin/server.js",
    "clean": "node ./bin/clean.js",
    "build:server": "webpack --config webpack/server/config.js",
    "build:client": "webpack --config webpack/client/config.js",
    "build": "npm run clean && concurrently \"npm run build:server\" \"npm run build:client\"",
    "watch": "npm run clean && concurrently \"npm run watch:client\" \"npm run watch:server\" \"npm run wait:server\" --kill-others",
    "wait:server": "just-wait --pattern \"dist/*.js\" && npm run start",
    "watch:server": "webpack --config webpack/server/watch.js",
    "watch:client": "webpack-dev-server --config webpack/client/watch.js",
    "test": "karma start ./tests/karma.config.js --single-run",
    "test:watch": "karma start ./tests/karma.config.js no-single-run",
    "lint": "eslint ./src ./bin ./webpack ./tests -c ./.eslintrc"
  },
  "dependencies": {
    "axios": "^0.15.3",
    "babel": "^6.5.2",
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.22.0",
    "body-parser": "^1.16.0",
    "css-loader": "^0.26.1",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "json-loader": "^0.5.4",
    "locale": "^0.1.0",
    "lodash": "^4.17.4",
    "node-noop": "^1.0.0",
    "node-sass": "^4.3.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-helmet": "^4.0.0",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.2",
    "react-router-redux": "^4.0.7",
    "react-tap-event-plugin": "^2.0.1",
    "redial": "^0.5.0",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",
    "sass-loader": "^4.1.1",
    "semantic-ui-css": "^2.2.4",
    "serialize-javascript": "^1.3.0",
    "style-loader": "^0.13.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^2.4.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.14.0",
    "webpack-isomorphic-tools": "^2.6.6"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "chai": "^3.5.0",
    "concurrently": "^3.1.0",
    "del": "^2.2.2",
    "enzyme": "^2.7.0",
    "eslint": "^3.13.1",
    "eslint-config-google": "^0.7.1",
    "eslint-plugin-react": "^6.9.0",
    "forever": "^0.15.3",
    "just-wait": "^1.0.9",
    "karma": "^1.4.0",
    "karma-chai": "^0.1.0",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.3.0",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-sinon": "^1.0.4",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.1",
    "mocha": "^3.2.0",
    "react-addons-test-utils": "^15.4.2",
    "react-hot-loader": "^3.0.0-beta.6",
    "sinon": "^1.17.7",
    "webpack-dev-server": "^1.15.2",
    "webpack-node-externals": "^1.4.3"
  },
  "engines": {
    "node": ">=6.9.0"
  }
}
