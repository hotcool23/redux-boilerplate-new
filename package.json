{
  "name": "redux-universal-boilerplate",
  "description": "Boilerplate of an isomorphic (universal) react application",
  "author": "Sergey Ivanov <xufocoder@gmail.com>",
  "license": "MIT",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ufocoder/redux-universal-boilerplate"
  },
  "homepage": "https://github.com/ufocoder/redux-universal-boilerplate",
  "keywords": [
    "react",
    "react-router",
    "react-redux",
    "redux",
    "universal",
    "isomorphic",
    "webpack",
    "express",
    "starter-kit",
    "boilerplate",
    "babel"
  ],
  "main": "bin/server.js",
  "scripts": {
    "clean": "node ./bin/clean.js",
    "prestart": "pm2 delete all || exit 0",
    "start": "pm2 start ./bin/server.js",
    "prebuild": "npm-run-all clean lint test",
    "build": "npm-run-all --parallel build:*",
    "build:server": "webpack --config webpack/server/config.js",
    "build:client": "webpack --config webpack/client/config.js",
    "deploy": "cross-env NODE_ENV=production npm-run-all build start",
    "prewatch": "npm run clean",
    "watch": "npm-run-all --parallel watch:*",
    "watch:wait": "just-wait --pattern \"dist/*.js\" && npm run start",
    "watch:server": "webpack --config webpack/server/watch.js",
    "watch:client": "webpack-dev-server --config webpack/client/watch.js",
    "test": "karma start ./tests/karma.config.js --single-run",
    "test:watch": "karma start ./tests/karma.config.js no-single-run",
    "lint": "eslint ./src ./bin ./webpack ./tests -c ./.eslintrc"
  },
  "dependencies": {
    "axios": "^0.15.3",
    "babel": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.22.0",
    "body-parser": "^1.16.1",
    "css-loader": "^0.26.1",
    "express": "^4.14.1",
    "extract-text-webpack-plugin": "^2.0.0-beta.5",
    "file-loader": "^0.10.0",
    "json-loader": "^0.5.4",
    "locale": "^0.1.0",
    "lodash": "^4.17.4",
    "node-noop": "^1.0.0",
    "node-sass": "^4.5.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-helmet": "^4.0.0",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.2",
    "react-router-redux": "^4.0.8",
    "react-tap-event-plugin": "^2.0.1",
    "redial": "^0.5.0",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",
    "sass-loader": "^6.0.0",
    "semantic-ui-css": "^2.2.4",
    "serialize-javascript": "^1.3.0",
    "style-loader": "^0.13.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^2.4.0",
    "url-loader": "^0.5.7",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.2.0",
    "webpack-isomorphic-tools": "^2.6.6"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "chai": "^3.5.0",
    "cross-env": "^3.1.4",
    "del": "^2.2.2",
    "enzyme": "^2.7.1",
    "eslint": "^3.15.0",
    "eslint-config-google": "^0.7.1",
    "eslint-plugin-react": "^6.9.0",
    "just-wait": "^1.0.10",
    "karma": "^1.4.1",
    "karma-chai": "^0.1.0",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.3.0",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-sinon": "^1.0.4",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.2",
    "mocha": "^3.2.0",
    "npm-run-all": "^4.0.2",
    "pm2": "^2.4.2",
    "react-addons-test-utils": "^15.4.2",
    "react-hot-loader": "^3.0.0-beta.6",
    "sinon": "^1.17.7",
    "webpack-dev-server": "^2.3.0",
    "webpack-node-externals": "^1.4.3"
  },
  "engines": {
    "node": ">=6.9.0"
  }
}
